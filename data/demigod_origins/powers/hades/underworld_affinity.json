{
    "name": "Underworld Affinity",
    "description": "You are respected by those in the underworld, and the undead can sense this.",
    "type": "origins:multiple",

    "selfteam": {
        "type": "origins:action_on_callback",
        "entity_action_added": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "team add underworld"
                },
                {
                    "type": "origins:execute_command",
                    "command": "team join underworld @s"
                }
            ]
        },
            "entity_action_lost": {
                "type": "origins:execute_command",
                "command": "team leave @s"
            },
        "priority": 0
    },

    "underworldmobs": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "team join underworld @e[type=minecraft:zombie]"
                },
                {
                    "type": "origins:execute_command",
                    "command": "team join underworld @e[type=minecraft:skeleton]"
                },
                {
                    "type": "origins:execute_command",
                    "command": "team join underworld @e[type=minecraft:husk]"
                },
                {
                    "type": "origins:execute_command",
                    "command": "team join underworld @e[type=minecraft:stray]"
                },
                {
                    "type": "origins:execute_command",
                    "command": "team join underworld @e[type=minecraft:bogged]"
                },
                {
                    "type": "origins:execute_command",
                    "command": "team join underworld @e[type=minecraft:wither_skeleton]"
                },
                {
                    "type": "origins:execute_command",
                    "command": "team join underworld @e[type=minecraft:drowned]"
                }
            ]
        },
        "interval": 20,
        "priority": 0
    }
}